<ul class="pager">
   {% if pager.isFirstPage == false %}    
        <li class="first"><a href="javascript:cargarContenidoCapa('{{ paginate_path(route, pager.getFirstPage, parameters) }}','result-busqueda');">&laquo;</a></li>
        <li class="previous"><a href="javascript:cargarContenidoCapa('{{ paginate_path(route, pager.getPreviousPage, parameters) }}','result-busqueda');">&lsaquo;</a></li>
   {% endif %}
   {% for page in pager.getPages %}
      {% if page == pager.getPage %}
        <li class="selected">
            <b>{{ page }}</b>
        </li>      
      {% else %}
        <li>
            <a href="javascript:cargarContenidoCapa('{{ paginate_path(route, page, parameters) }}','result-busqueda');">{{ page }}</a>
        </li>
      {% endif %}
   {% endfor %}  
   {% if pager.isLastPage == false %}
        <li class="next"><a href="javascript:cargarContenidoCapa('{{ paginate_path(route, pager.getNextPage, parameters) }}','result-busqueda');">&rsaquo;</a></li>
        <li class="last"><a href="javascript:cargarContenidoCapa('{{ paginate_path(route, pager.getLastPage, parameters) }}','result-busqueda');">&raquo;</a></li>
   {% endif %}
</ul>